<%- include('../header') %>
<div class="container my-3">
  <h3>praktikan edit page</h3>
  <div class="row">
    <div class="col-6 mx-auto">
      <form method="post" action="/praktikan/update/<%= praktikan.id %>">
        <div class="mb-3">
          <label for="">NIM</label>
          <input
            type="text"
            class="form-control"
            name="nim"
            value="<%= praktikan.nim %>"
          />
        </div>
        <div class="mb-3">
          <label for="">nama</label>
          <input
            type="text"
            class="form-control"
            name="nama"
            value="<%= praktikan.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="">jurusan</label>
          <input
            class="form-control"
            list="datalistOptions"
            name="jurusan"
            placeholder="<%= praktikan.jurusan %>."
            value="<%= praktikan.jurusan %>"
          />
          <datalist id="datalistOptions">
            <% jurusan.forEach(jurusans => { %>
            <option value="<%= jurusans.nama %>"></option>
            <%})%>
          </datalist>
        </div>
        <div class="mb-3">
          <label for="" class="text-center">fakultas</label>
          <input
            type="text"
            class="form-control"
            name="fakultas"
            value="<%= praktikan.fakultas %>"
          />
        </div>
        <div class="mb-3">
          <label for="">tahun masuk</label>
          <input
            type="text"
            class="form-control"
            name="tahun_masuk"
            value="<%= praktikan.tahun_masuk %>"
          />
        </div>
        <div class="mb-3">
          <label for="">status</label>
          <select
            class="form-control"
            name="status"
            value="<%= praktikan.status %>"
          >
            <option value="Aktif">aktif</option>
            <option value="Tidak Aktif">Non Aktif</option>
            <option value="Cuti">Cuti</option>
          </select>
        </div>

        <div class="mb-3">
          <button class="btn btn-success" type="submit">SUBMIT</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../footer') %>
